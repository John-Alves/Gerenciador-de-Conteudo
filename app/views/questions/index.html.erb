<p id="notice"><%= notice %></p>

<h1>Questoes</h1>

<table style="width: 100%;">
  <thead>
    <tr>
      <th>Assunto</th>
      <th>Tipo</th>
      <th>Enunciado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.subject.title %></td>
        <td><%= question.question_type.title %></td>
        <td><%= JSON.parse(question.data_json)['statement'] %></td>
        <td><%= link_to 'Detalhes', question %></td>
<!--        <td><%#= link_to 'Edit', edit_question_path(question) %></td>-->
        <td><%= link_to 'Deletar', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

